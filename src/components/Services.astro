---
import data from '@data';

// Define the type for the service data
interface Service {
  title: string;
  description: string;
  imageUrl: string; // Optional, based on your JSON structure
}

const services: Service[] = data.services;
const {name,subtitle} =data.servicetext


---

<section id="services" class="py-16 bg-gray-100">
  <div class="container mx-auto px-6 lg:px-12">
    <h1 class="text-4xl lg:text-5xl font-bold text-center text-gray-800">{name}</h1>



    <p class="text-center text-gray-600 mt-5 mb-12 text-2xl">
      {subtitle}
    </p>   

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
      {services.map((service) => (
        <div class="p-6 bg-gray-300 rounded-lg shadow-md hover:shadow-lg transition transform hover:-translate-y-2">
          <h1 class="text-2xl font-semibold text-indigo-500 text-center">{service.title}</h1>
          <p class="mt-5 text-gray-600 text-2xl">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
