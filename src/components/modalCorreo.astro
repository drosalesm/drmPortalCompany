---
// Modal.astro
const { message, onClose } = Astro.props;
---

<div class="fixed inset-0 flex items-center justify-center bg-gray-900 bg-opacity-50 z-50">
  <div class="bg-white rounded-lg p-6 max-w-sm w-full">
    <h2 class="text-xl font-semibold text-green-500 mb-4">Mensaje Enviado con exito</h2>
    <p class="text-gray-700">{message}</p>
    <button
      class="mt-4 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-md focus:outline-none"
      id="close-modal"
    >
      Close
    </button>
  </div>
</div>
