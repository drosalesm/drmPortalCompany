---
import { projects } from '@data'; // Import your data.json

const { name, subtitle } = projects;
---

<section class="w-full px-4 py-12 bg-gray-100">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl lg:text-5xl font-bold text-center text-gray-800">{name}</h1>
    <p class="text-center text-gray-600 mt-5 mb-12 text-2xl">{subtitle}</p>

    <!-- Cards Wrapper -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8">
      <!-- Loop over the projects list -->
      {projects.list.map((project, index) => (
        <div class="relative bg-white shadow-lg rounded-2xl overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl cursor-pointer">
          <img 
            src={project.imageUrl ? `/${project.imageUrl}` : 'https://via.placeholder.com/1600x900'} 
            alt={project.title} 
            class="w-full h-64 object-contain" 
          />
          <div class="p-6 relative">
            <h2 class="text-2xl font-bold text-gray-800">{project.title}</h2>
            <p class="mt-4 text-gray-600">{project.description}</p>
          {/* Conditional rendering of <a> tag based on project.url */}
            {project.url ? (
            <a 
              href={project.url} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="absolute inset-0"
            ></a>
          ) : (
            <a
              href=""
              class="absolute inset-0 cursor-default"
              onclick=event.preventDefault()
              
            ></a>
          )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>


